<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView for displaying numbers -->
    <TextView
        android:id="@+id/view"
        android:layout_width="319dp"
        android:layout_height="92dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout container for operator buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="352dp"
        android:layout_height="75dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="29dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <Button
            android:id="@+id/c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="C"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/white"
            android:background="@drawable/button_background" />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="*"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/remove"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
    android:layout_marginEnd="29dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonContainer">

        <Button
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="7"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="8"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="9"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="/" />
    </LinearLayout>

<LinearLayout
android:id="@+id/buttonContainer3"
android:layout_width="352dp"
android:layout_height="wrap_content"
android:layout_marginStart="29dp"
android:layout_marginTop="8dp"
    android:layout_marginEnd="29dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonContainer2">

<Button
android:id="@+id/n4"
android:layout_width="0dp"
android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:layout_weight="1"
android:text="4" />

<Button
android:id="@+id/n5"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:text="5" />

<Button
android:id="@+id/n6"
android:layout_width="0dp"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:layout_height="wrap_content"
android:layout_weight="1"
android:text="6" />

    <Button
        android:id="@+id/sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:text="-" />

</LinearLayout>

<LinearLayout
android:id="@+id/buttonContainer4"
android:layout_width="352dp"
android:layout_height="wrap_content"
android:layout_marginStart="29dp"
android:layout_marginTop="8dp"
    android:layout_marginEnd="29dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonContainer3">

<Button
android:id="@+id/n1"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:text="1" />

<Button
android:id="@+id/n2"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:text="2" />

<Button
android:id="@+id/n3"
android:layout_width="0dp"
android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:layout_weight="1"
android:text="3" />

    <Button
        android:id="@+id/moule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:text="%" />
</LinearLayout>

<LinearLayout
android:id="@+id/buttonContainer5"
android:layout_width="352dp"
android:layout_height="wrap_content"
android:layout_marginStart="29dp"
android:layout_marginTop="8dp"
    android:layout_marginEnd="29dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buttonContainer4">

<Button
android:id="@+id/n0"
android:layout_width="0dp"
android:layout_height="wrap_content"
    android:background="@drawable/button_background"
    android:textColor="@color/white"
android:layout_weight="1"
android:text="0" />

    <Button
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:text="." />

    <Button
        android:id="@+id/equal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:text="=" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
